import React from 'react';
import { useState } from 'react';

const Testimonials = () => {
  const [activeTestimonial, setActiveTestimonial] = useState(0);

  const testimonials = [
    {
      id: 1,
      name: 'Sarah Johnson',
      role: 'Homeowner',
      content: 'The interior design team transformed our house into a dream home. Their attention to detail and creative solutions exceeded our expectations.',
      rating: 5,
      project: 'Modern Apartment Redesign'
    },
    {
      id: 2,
      name: 'Michael Chen',
      role: 'Business Owner',
      content: 'Professional, punctual, and incredibly talented. Our office space has never looked better. Highly recommended!',
      rating: 5,
      project: 'Corporate Office Design'
    },
    {
      id: 3,
      name: 'Emily Rodriguez',
      role: 'Restaurant Owner',
      content: 'They perfectly captured the ambiance we wanted for our restaurant. Customers constantly compliment the interior design.',
      rating: 4,
      project: 'Fine Dining Restaurant'
    },
    {
      id: 4,
      name: 'David Thompson',
      role: 'Real Estate Developer',
      content: 'Working with this team has been exceptional. They understand market trends and create spaces that appeal to modern buyers.',
      rating: 5,
      project: 'Luxury Condo Development'
    }
  ];

  const nextTestimonial = () => {
    setActiveTestimonial((prev) => (prev + 1) % testimonials.length);
  };

  const prevTestimonial = () => {
    setActiveTestimonial((prev) => (prev - 1 + testimonials.length) % testimonials.length);
  };

  return (
    <div className="testimonials-page bg-gray-50">
      <div className="container mx-auto px-4 py-16">
        <div className="text-center mb-12">
          <h1 className="text-4xl font-bold mb-4">Client Testimonials</h1>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto">
            Hear what our clients have to say about their experience working with our interior design team.
          </p>
        </div>

        {/* Main Testimonial */}
        <div className="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-8 mb-12">
          <div className="text-center">
            {/* Rating Stars */}
            <div className="flex justify-center mb-4">
              {[...Array(testimonials[activeTestimonial].rating)].map((_, i) => (
                <span key={i} className="text-yellow-400 text-2xl">★</span>
              ))}
            </div>
            
            <p className="text-xl italic text-gray-700 mb-6">
              "{testimonials[activeTestimonial].content}"
            </p>
            
            <div className="mb-2">
              <h3 className="text-2xl font-semibold">{testimonials[activeTestimonial].name}</h3>
              <p className="text-gray-600">{testimonials[activeTestimonial].role}</p>
            </div>
            
            <p className="text-blue-600 font-medium">
              Project: {testimonials[activeTestimonial].project}
            </p>
          </div>
        </div>

        {/* Navigation */}
        <div className="flex justify-center items-center gap-8 mb-16">
          <button
            onClick={prevTestimonial}
            className="p-3 rounded-full bg-white shadow-md hover:shadow-lg transition-shadow"
          >
            ←
          </button>
          
          <div className="flex gap-2">
            {testimonials.map((_, index) => (
              <button
                key={index}
                onClick={() => setActiveTestimonial(index)}
                className={`w-3 h-3 rounded-full transition-colors ${
                  index === activeTestimonial ? 'bg-blue-600' : 'bg-gray-300'
                }`}
              />
            ))}
          </div>
          
          <button
            onClick={nextTestimonial}
            className="p-3 rounded-full bg-white shadow-md hover:shadow-lg transition-shadow"
          >
            →
          </button>
        </div>

        {/* All Testimonials Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
          {testimonials.map((testimonial, index) => (
            <div
              key={testimonial.id}
              className={`bg-white rounded-lg shadow-md p-6 transition-all ${
                index === activeTestimonial ? 'ring-2 ring-blue-500' : ''
              }`}
            >
              <div className="flex mb-4">
                {[...Array(testimonial.rating)].map((_, i) => (
                  <span key={i} className="text-yellow-400">★</span>
                ))}
              </div>
              <p className="text-gray-700 mb-4 italic">"{testimonial.content}"</p>
              <div>
                <h4 className="font-semibold">{testimonial.name}</h4>
                <p className="text-gray-600 text-sm">{testimonial.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
};

export default Testimonials;
