import React from 'react';
import { useState } from 'react';

const FAQ = () => {
  const [openItems, setOpenItems] = useState([]);

  const toggleItem = (index) => {
    setOpenItems(prev => 
      prev.includes(index) 
        ? prev.filter(item => item !== index)
        : [...prev, index]
    );
  };

  const faqItems = [
    {
      question: "How long does a typical interior design project take?",
      answer: "The timeline varies depending on the scope of the project. A single room redesign can take 2-4 weeks, while a full home renovation may take 3-6 months. We provide detailed timelines during our initial consultation."
    },
    {
      question: "What is your design process?",
      answer: "Our process includes: 1) Initial consultation, 2) Concept development, 3) Design presentation, 4) Implementation planning, and 5) Project execution. We work closely with you at every step to ensure your vision is realized."
    },
    {
      question: "Do you work within a specific budget?",
      answer: "Yes, we prioritize working within your budget. During our initial meeting, we discuss your budget constraints and provide transparent cost breakdowns. We're skilled at maximizing value while maintaining quality."
    },
    {
      question: "Can you work with existing furniture?",
      answer: "Absolutely! We often incorporate clients' existing pieces into new designs. We'll assess your current furniture and recommend what to keep, refurbish, or replace to achieve the desired look."
    },
    {
      question: "What areas do you serve?",
      answer: "We primarily serve the metropolitan area but can accommodate projects nationwide. For remote locations, we offer virtual design services that have proven equally effective."
    },
    {
      question: "How do you handle project management?",
      answer: "We assign a dedicated project manager who coordinates with contractors, vendors, and craftsmen. You'll receive regular updates and have a single point of contact throughout the project."
    },
    {
      question: "What styles do you specialize in?",
      answer: "Our team is versatile in various styles including modern, contemporary, traditional, transitional, industrial, and Scandinavian. We tailor our approach to match your personal style preferences."
    },
    {
      question: "Do you offer sustainable design options?",
      answer: "Yes, we're committed to eco-friendly design. We can incorporate sustainable materials, energy-efficient solutions, and environmentally conscious practices into your project."
    }
  ];

  return (
    <div className="faq-page bg-gray-50">
      <div className="container mx-auto px-4 py-16">
        <div className="text-center mb-12">
          <h1 className="text-4xl font-bold mb-4">Frequently Asked Questions</h1>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto">
            Find answers to common questions about our interior design services and process.
          </p>
        </div>

        <div className="max-w-4xl mx-auto">
          {faqItems.map((item, index) => (
            <div key={index} className="bg-white rounded-lg shadow-sm mb-4 overflow-hidden">
              <button
                onClick={() => toggleItem(index)}
                className="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 transition-colors"
              >
                <h3 className="text-lg font-semibold text-gray-800">{item.question}</h3>
                <span className={`transform transition-transform ${
                  openItems.includes(index) ? 'rotate-180' : ''
                }`}>
                  â–¼
                </span>
              </button>
              
              {openItems.includes(index) && (
                <div className="px-6 pb-4">
                  <p className="text-gray-600 leading-relaxed">{item.answer}</p>
                </div>
              )}
            </div>
          ))}
        </div>

        {/* Contact CTA */}
        <div className="max-w-4xl mx-auto mt-12 bg-blue-600 rounded-2xl p-8 text-center text-white">
          <h2 className="text-2xl font-bold mb-4">Still have questions?</h2>
